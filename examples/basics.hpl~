def-painter beside[a](p1, p2):
   paint p1 in subframe((0, 0), a, 1)
   paint p2 in subframe((a, 0), 1-a, 1)
end

def-painter below[a](p1, p2):
   paint p1 in subframe((0, 0), 1, a)
   paint p2 in subframe((0, a), 1, 1-a)
end
/*
